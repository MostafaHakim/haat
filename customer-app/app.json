{
  "expo": {
    "name": "Food Delivery Customer",
    "slug": "food-delivery-customer",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to show nearby restaurants and enable food delivery.",
        "NSLocationAlwaysUsageDescription": "This app uses your location to track delivery in real-time.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses your location to show nearby restaurants and enable food delivery."
      },
      "bundleIdentifier": "com.yourcompany.fooddelivery.customer"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.ACCESS_BACKGROUND_LOCATION"
      ],
      "package": "com.yourcompany.fooddelivery.customer"
    },
    "web": {},
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Food Delivery to use your location to find nearby restaurants and enable delivery services.",
          "isAndroidBackgroundLocationEnabled": true
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "bc5a32af-4784-42a1-bcae-943b0df047bd"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/bc5a32af-4784-42a1-bcae-943b0df047bd"
    }
  }
}
